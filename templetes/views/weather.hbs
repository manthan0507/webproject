<!DOCTYPE html>
<html lang="en">

<head>
     {{>headerlink}}
    <title>Weather App | Weather</title>
</head>

<body>
    <!-- navbar -->
    {{>navbar}}
    <!-- main header -->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="main_content">
                    <form action="" class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter Your City Name" autocomplete="off">
                        <input type="submit" value="search" id="submitBtns">
                    </form>
                </div>
                <div class="temp_info">
                    <div class="top_layer">
                        <p id="day">Tuesday</p>
                        <p id="today_date">13 OCT</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name"> Get Output is here</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"></p>
                            <p id="temp_status"> </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- footer -->
   {{>footer}}
   <script src="js/main.js"></script>
   <script >
       const day = document.getElementById("day");
       const today_date = document.getElementById("today_date");
        const getCurrentDay = () => {
            var weekday = new Array(7);
            weekday[0] = "Sunday";
            weekday[1] = "Monday";
            weekday[2] = "Tuesday";
            weekday[3] = "Wedesday";
            weekday[4] = "Thuday";
            weekday[5] = "Friday";
            weekday[6] = "Saturday";

            let currentTime = new Date();
            let day = weekday[currentTime.getDay()];
            return day;
        };
     day.innerHTML =  getCurrentDay();
        const getCurrentTime = () => {
            var months = [
                "Jan",
                "Feb",
                "Mar",
                "Apr",
                "May",
                "June",
                "July",
                "Aug",
                "Sept",
                "Oct",
                "Nov",
                "Dec",
            ];

            var now = new Date();
            var month = months[now.getMonth() + 1];
            var date = now.getDate();


            return `${date} ${month} `;
        };
today_date.innerHTML =  getCurrentTime();
   </script>
</body>

</html>